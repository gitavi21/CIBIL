                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rubik_medium"
                                android:textStyle="normal"
                                android:textSize="12sp"
                                android:textColor="@color/dark_slate_blue"
                                android:letterSpacing="0.013"
